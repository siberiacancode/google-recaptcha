    "lint-staged": "lint-staged"
  },
  "devDependencies": {
    "shx": "^0.4.0",
    "vite": "^6.2.3",
    "vite-plugin-dts": "^4.5.3"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
